<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.AdminController"
	prefWidth="600" prefHeight="400"
	alignment="TOP_LEFT" vgap="10" hgap="50">
	
	<padding>
		<Insets top="25" bottom="25" left="25" right="25"/>
	</padding>
	
	<Label text="Administrator Dashboard"
		styleClass="h2"
		GridPane.columnSpan="2"
		GridPane.rowIndex="0"
		GridPane.columnIndex="0"/>
		
	<Button text="View All Staff" fx:id="viewAccButton"
		onAction="#handleViewAcc"
		GridPane.rowIndex="1"
		GridPane.columnIndex="0"/>
		
	<Button text="View All Items" fx:id="viewItemsButton"
		onAction="#handleViewItems"
		GridPane.rowIndex="2"
		GridPane.columnIndex="0"/>
		
	<Button text="View All Suppliers" fx:id="viewSuppButton"
		onAction="#handleViewSuppliers"
		disable="true"
		GridPane.rowIndex="3"
		GridPane.columnIndex="0"/>
		
	<Button text="View Sales" fx:id="viewSalesButton"
		onAction="#handleViewSales"
		disable="true"
		GridPane.rowIndex="4"
		GridPane.columnIndex="0"/>	
		
	<Button text="Create Staff Account" fx:id="createAccButton"
		onAction="#handleCreateAcc"
		GridPane.rowIndex="1"
		GridPane.columnIndex="1"/>
		
	<Button text="Add New Item" fx:id="createItemButton"
		onAction="#handleCreateItem"
		GridPane.rowIndex="2"
		GridPane.columnIndex="1"/>
		
	<Button text="Add New Supplier" fx:id="createSuppButton"
		onAction="#handleCreateSupplier"
		disable="true"
		GridPane.rowIndex="3"
		GridPane.columnIndex="1"/>
	
	<stylesheets>
		<URL value="@styles.css"/>
	</stylesheets>
	
</GridPane>

